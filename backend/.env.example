# Emergency Payment Runbook - Environment Configuration
# Copy this file to .env and fill in the values

# =============================================================================
# Azure AI Foundry Settings
# =============================================================================

# Project name/id in Azure AI Foundry
AZURE_FOUNDRY_PROJECT=ozgurguler-7212

# Project endpoint URL
AZURE_FOUNDRY_PROJECT_ENDPOINT=https://ozgurguler-7212-resource.services.ai.azure.com/api/projects/ozgurguler-7212

# Agent names (hosted agents in Foundry)
AZURE_FOUNDRY_AGENT_SANCTIONS=sanctions-screening-agent
AZURE_FOUNDRY_AGENT_LIQUIDITY=liquidity-screening-agent
AZURE_FOUNDRY_AGENT_PROCEDURES=operational-procedures-agent

# =============================================================================
# Azure Authentication (Optional - uses DefaultAzureCredential by default)
# =============================================================================

# For service principal authentication
# AZURE_TENANT_ID=your-tenant-id
# AZURE_CLIENT_ID=your-client-id
# AZURE_CLIENT_SECRET=your-client-secret

# =============================================================================
# Application Settings
# =============================================================================

# Application name and version
APP_NAME="Emergency Payment Runbook"
APP_VERSION=1.0.0

# Debug mode (enables hot reload)
DEBUG=false

# Dry-run mode (stubs agent responses for local testing)
# Set to true if Azure credentials are not available
DRY_RUN_MODE=false

# =============================================================================
# Database Settings
# =============================================================================

# SQLite database URL (default: local file)
DATABASE_URL=sqlite:///./runbook.db

# =============================================================================
# Logging Settings
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Log format: json or text
LOG_FORMAT=json

# Redact PII from logs
REDACT_PII=true

# =============================================================================
# Retry Settings
# =============================================================================

# Maximum retry attempts for agent calls
MAX_RETRIES=3

# Initial delay between retries (seconds)
RETRY_DELAY_SECONDS=1.0

# Backoff multiplier for retry delays
RETRY_BACKOFF_FACTOR=2.0

# =============================================================================
# SSE Settings
# =============================================================================

# Heartbeat interval for SSE connections (seconds)
SSE_HEARTBEAT_INTERVAL=15
